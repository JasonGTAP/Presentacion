@model Conexion.Models.Estacionamiento

@{
    ViewBag.Title = "Editar";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <hr />

    <div class="form container border">
        <h4 class="text-center text-primary ">Estacionamiento</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdEstacionamiento)

       
       

        <div class="form-group">
            @Html.LabelFor(model => model.EstacionamientoOcupado, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.EstacionamientoOcupado)
                    @Html.ValidationMessageFor(model => model.EstacionamientoOcupado, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            Alias  Bicicleta
            <div class="col-md-10">
                @Html.DropDownList("idBicicleta", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idBicicleta, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.idTrabajador, "idTrabajador", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idTrabajador", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idTrabajador, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group text-center">
            <div class="col-md-offset-2 col-md-10 ">
                <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
                <div class="">
                    @Html.ActionLink("Volver", "Index")
                </div>

            </div>
        </div>
    </div>
}


